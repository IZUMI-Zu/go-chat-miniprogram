/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f0f0;
  padding: 20rpx;
}

/* 输入文本框样式 */
.input-container {
  width: 100%;
  margin-bottom: 20rpx;
}

input {
  width: 100%;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 5rpx;
}

/* 检测按钮样式 */
.button-container {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

button {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
}

/* 输出文本框样式 */
.output-container {
  width: 100%;
}
.output-container textarea{
  font-size: 12px;
}

textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  font-size: 14rpx;
  resize: none;
}